
.risk-list {
    margin-top: 30px;

    .risk-element-id {
        border: 2px solid #ea5c73;
        border-radius: 50%;
        padding: 5px;
        margin-right: 5px;
        text-align: center;
        width: 20px;
        height: 20px;
        display: inline-block;
    }

    .ms-GroupHeader, .ms-GroupHeader:hover {
        background: white;
    }

    button[disabled] {
        background-color: #fff !important;
    }

    .ms-DetailsRow-fields {
        border-bottom: 1px solid #eaeaea;
    }
}