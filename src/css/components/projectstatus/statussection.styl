.status-section {
    a, a:visited {
        color: #1C4269;
    }

    h2 {
        color: #99A8AD;
        text-transform: uppercase;
    }

    .ms-Icon {
        font-size: 45px;

        &.positive-status {
            color: #2da748;
        }

        &.negative-status {
            color: #ea5c73;
        }

        &.neutral-status {
            color: #e9b359;
        }
    }

    background-color: #eff6fa;

    .status-elements {
        .status-element {
            display: block;
            padding: 5px;
            cursor: pointer;

            &:hover {
                h1 {
                    font-weight: bold;
                }
            }

            .status-icons {
                margin-top: 25px;
            }

            h2 {
                margin-top: 20px;
            }
        }
    }
}