.status-section {
    padding: 10px;
    background-color: #eff6fa;

    a, a:visited {
        color: #1C4269;
    }

    h3 {
        color: #99A8AD;
        text-transform: uppercase;
    }

    .ms-Icon {
        &.positive-status {
            color: #2da748;
        }

        &.negative-status {
            color: #ea5c73;
        }

        &.neutral-status {
            color: #e9b359;
        }
    }

    .status-elements {
        .status-element {
            display: block;
            padding: 10px;

            .status-icons {
                font-size: 40px;
            }
        }
    }

    .status-columns-container {
        .status-elements {
            display: flex;
            flex-wrap: wrap;
            justify-content: flex-start;
            align-content: flex-start;

            .status-element {
                width: 50%;
            }
        }
    }
}